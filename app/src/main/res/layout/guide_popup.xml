<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:nestedScrollingEnabled="true">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:fillViewport="false"
        android:forceDarkAllowed="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- MAIN -->
            <TextView
                android:id="@+id/guide_popup_intro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="What you can say:"
                android:textColor="@color/colorAccentLight"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guide_popup_text_1"/>

            <TextView
                android:id="@+id/guide_popup_text_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="ðŸ‡¬ðŸ‡§  - &quot;PLAY song name BY artist name&quot;"
                android:textColor="@color/light_grey"
                android:textSize="14dp"
                android:textStyle="italic"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide_popup_intro"
                app:layout_constraintBottom_toTopOf="@+id/guide_popup_text_2"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/guide_popup_text_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="ðŸ‡®ðŸ‡¹  - &quot;in italiano, PLAY nome canzone BY nome artista&quot;"
                android:textColor="@color/light_grey"
                android:textSize="14dp"
                android:textStyle="italic"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide_popup_text_1"
                app:layout_constraintBottom_toTopOf="@+id/guide_popup_descr_intro"
                app:layout_constraintVertical_chainStyle="packed" />

            <!-- DESCRIPTION -->
            <TextView
                android:id="@+id/guide_popup_descr_intro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:text="How it works:"
                android:textColor="@color/colorAccentLight"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guide_popup_text_2"
                app:layout_constraintBottom_toTopOf="@id/guide_popup_descr"/>

            <TextView
                android:id="@+id/guide_popup_descr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="Plays a song in Spotify from its album. Preference is given to your saved tracks and to albums over singles.\nNOTE: Song language MUST be told if the song is not in English!"
                android:textColor="@color/light_grey"
                android:textSize="14dp"
                android:visibility="visible"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guide_popup_descr_intro"
                app:layout_constraintBottom_toTopOf="@id/guide_popup_alts_intro"/>

            <TextView
                android:id="@+id/guide_popup_alts_intro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:text="Alternative ways to say it:"
                android:textColor="@color/colorAccentLight"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/guide_popup_arrow"
                app:layout_constraintTop_toBottomOf="@+id/guide_popup_descr"
                app:layout_constraintBottom_toTopOf="@id/guide_popup_alts"/>

            <ImageView
                android:id="@+id/guide_popup_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:visibility="visible"
                android:src="@drawable/icon_expand"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintRight_toLeftOf="@+id/guide_popup_alts_intro"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guide_popup_descr"
                app:layout_constraintBottom_toTopOf="@id/guide_popup_alts"/>

            <TextView
                android:id="@+id/guide_popup_alts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:paddingLeft="12dp"
                android:text="ðŸ‡¬ðŸ‡§  - &quot;PLAY song name BY artist name&quot;"
                android:textColor="@color/light_grey"
                android:textSize="14dp"
                android:textStyle="italic"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide_popup_alts_intro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
