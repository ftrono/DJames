<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryDark"
    app:strokeColor="@color/colorPrimaryDark"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/voc_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/voc_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:src="@drawable/icon_music"
            android:visibility="visible"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_edit_text"
            app:layout_constraintTop_toTopOf="@+id/voc_delete_button"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="TYPE"
            android:textColor="@color/mid_grey"
            android:textSize="12dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/voc_icon"
            app:layout_constraintTop_toTopOf="@+id/voc_delete_button"
            app:layout_constraintBottom_toBottomOf="@+id/voc_delete_button"/>

        <EditText
            android:id="@+id/item_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text=""
            android:hint="Write name here..."
            android:textColor="@color/light_grey"
            android:textColorHint="@color/mid_grey"
            android:textSize="14dp"
            android:textStyle="italic"
            android:backgroundTint="@color/colorPrimaryDark"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:scrollHorizontally="true"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/voc_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_type"/>

        <TextView
            android:id="@+id/voc_detail_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_marginBottom="11dp"
            android:text="LINK: "
            android:textColor="@color/mid_grey"
            android:textSize="10dp"
            android:visibility="gone"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/voc_icon"
            app:layout_constraintBottom_toBottomOf="@+id/voc_detail"
            />

        <EditText
            android:id="@+id/voc_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_marginTop="-8dp"
            android:text=""
            android:hint="Paste playlist link here..."
            android:textColor="@color/mid_grey"
            android:textColorHint="@color/mid_grey"
            android:textSize="12dp"
            android:textStyle="italic"
            android:backgroundTint="@color/colorPrimaryDark"
            android:inputType="textUri|textWebEditText"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:visibility="gone"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toRightOf="@+id/voc_detail_intro"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_edit_text"/>

        <ImageView
            android:id="@+id/voc_edit_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="8dp"
            android:src="@drawable/edit_icon"
            android:visibility="visible"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@+id/voc_delete_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/voc_done_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="8dp"
            android:src="@drawable/done_icon"
            android:visibility="gone"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@+id/voc_delete_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/voc_delete_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingRight="8dp"
            android:src="@drawable/delete_icon"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>