<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme"
        parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="materialAlertDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FakeLockScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/faded_grey</item>
    </style>

    <style name="ActionBarTheme" parent="@style/ThemeOverlay.Material3.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
<!--        <item name="android:textSize">20dp</item>-->
        <item name="android:textColor">#FFFFFF</item>
        <!-- include other attributes you want to change: textColor, textStyle, etc -->
    </style>

    <style name="ToolbarSubtitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/mid_grey</item>
        <item name="android:textStyle">italic</item>
<!--        <item name="android:textSize">14dp</item>-->
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Dark" />

</resources>