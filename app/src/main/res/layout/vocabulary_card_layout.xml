<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryDark"
    app:strokeColor="@color/colorPrimaryDark"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="🧑‍🎤 Type"
            android:textColor="@color/mid_grey"
            android:textSize="12dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/voc_delete_button"
            app:layout_constraintBottom_toBottomOf="@+id/voc_delete_button"/>

        <TextView
            android:id="@+id/item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:text=""
            android:textSize="16dp"
            android:textStyle="italic"
            android:textColor="@color/light_grey"
            android:visibility="visible"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/voc_delete_button"/>

        <EditText
            android:id="@+id/item_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:text=""
            android:hint="Write name here..."
            android:textColor="@color/light_grey"
            android:textColorHint="@color/mid_grey"
            android:textSize="16dp"
            android:textStyle="italic"
            android:backgroundTint="@color/dark_grey"
            android:visibility="gone"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/voc_delete_button"/>

        <ImageView
            android:id="@+id/voc_edit_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingRight="8dp"
            android:src="@drawable/edit_icon"
            android:visibility="visible"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@+id/voc_delete_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/voc_done_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingRight="8dp"
            android:src="@drawable/done_icon"
            android:visibility="gone"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@+id/voc_delete_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/voc_delete_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:paddingRight="8dp"
            android:src="@drawable/delete_icon"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>