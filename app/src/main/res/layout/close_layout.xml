<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/close_view"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <View
        android:id="@+id/arrow_down"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/arrow_up"
        android:rotation="180"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="-30dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/close_text"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:text="CLOSE"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="italic"
        android:layout_marginBottom="55dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/arrow_down"
        app:layout_constraintRight_toRightOf="@+id/arrow_down"
        app:layout_constraintTop_toTopOf="@+id/arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/arrow_down" />
<!--        android:shadowColor="@color/dark_grey"-->
<!--        android:shadowDx="5"-->
<!--        android:shadowDy="5"-->
<!--        android:shadowRadius="10" -->

</androidx.constraintlayout.widget.ConstraintLayout>